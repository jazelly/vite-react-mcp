{
  "name": "vite-react-mcp",
  "type": "module",
  "version": "0.1.0",
  "description": "Vite plugin for React MCP",
  "main": "dist/src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "pnpm -r run start",
    "build": "npx shx rm -rf dist && tsc",
    "build:src": "npx shx rm -rf dist && tsc --project tsconfig.json --outDir dist --rootDir src",
    "playground": "pnpm --filter user-profile-app run start",
    "format": "pnpm biome format --write",
    "lint": "pnpm biome lint --write",
    "check": "pnpm biome check --write"
  },
  "keywords": [
    "vite",
    "react",
    "mcp",
    "devtools"
  ],
  "author": {
    "name": "jazelly",
    "email": "xzha4350@gmail.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@types/react-reconciler": "catalog:",
    "@biomejs/biome": "1.9.4",
    "@modelcontextprotocol/inspector": "catalog:",
    "typescript": "catalog:",
    "bippy": "catalog:",
    "vite": "catalog:"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.7.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.23.5"
  }
}
